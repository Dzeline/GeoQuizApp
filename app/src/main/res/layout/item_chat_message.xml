<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Rider Profile Icon -->
    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_profile_placeholder"
        android:contentDescription="@string/profile_image_desc"
        android:scaleType="centerCrop"
        android:layout_marginEnd="8dp" />

    <!-- Vertical container for Rider Name & Latest Message -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Rider Name -->
        <TextView
            android:id="@+id/tvRiderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rider_101"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <!-- Latest Message -->
        <TextView
            android:id="@+id/tvLatestMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_can_we_meet"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>

    <!-- Rider Status Sticker -->
    <ImageView
        android:id="@+id/imgStatusSticker"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/status_sticker_desc"
        android:src="@drawable/statusavailable" />

</LinearLayout>
